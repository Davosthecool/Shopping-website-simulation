{% extends 'base.html.twig' %}

{% block stylesheets %} 
<link rel="stylesheet" href="styles/produit.css" type="text/css">
{% endblock %}


{% block content %}
<main>
        <div class="principale">
        <div class="container">
            <div class="produit-images">
                <img src= "{{ asset('images/' ~ produit.image) }}" alt= "{{produit.image}}">
            </div>
            <div class="produit-options">
                <form action="" method="post" class="form-options">
                    <div class="informations">
                        <a href=""  class="marque-vetement">{{produit.marque}}</a>
                        <p class="type-vetement">{{produit.nom}}</p>
                        <p class="prix-vetement">{{produit.prix}} â‚¬</p>
                    </div>
                    <div class="taille-option">
                        <label for="taille">Taille</label>
                        <div class="option-select">
                            <select name="Taille" id="taille" required>
                                <option value="" disabled selected>Choississez votre taille</option>
                                {% for taille in produit.tailles %}
                                    <option value="{{taille}}">{{taille}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="couleur-option">
                        <label for="couleur">Couleur</label>
                        <div class="option-select">
                            <select name="couleur" id="couleur" required>
                                <option value="" disabled selected>Choississez votre couleur</option>
                                {% for couleur in produit.couleurs %}
                                    <option value="{{couleur}}">{{couleur}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="ajouter">Ajouter au panier</button>
                </form>
            </div>
        </div>
        </div>
</main>
{% endblock %}
