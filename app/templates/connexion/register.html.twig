{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %} 
<link rel="stylesheet" href="styles/login.css" type="text/css">
{% endblock %}


{% block header %}
{% include asset('headers/simple_header.html.twig') %}
{% endblock %}

{% block content %}

    {# {{ form_row(registrationForm.plainPassword, {'attr' : {'class' : 'input_login', 'placeholder' : ''} }) }}  {{ form_label(registrationForm.plainPassword) }}#}
    <main>
        <div class="principale">
            <button id="retour" class="retour">
                <i class="icon-angle-left"></i>
                <span>Retour</span>
            </button>
            <div class="principale-texte">
                <p class="title">Connexion</p>
                <p class="subtitle">Saississez votre mot de passe pour vous connecter</p>
            </div>
            <div class="principale-form">
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm, {'attr' : {'class' : 'main-form'} }) }}
                    <div class="email-edit">
                        <a href="">
                            <p>ahamadaibrahim@gmail.com</p>
                            <i class="icon-pencil"></i>
                        </a>
                    </div>
                    
                    <div class="choose">
                        {% for choice in registrationForm.sexe %}
                            <div>
                                {{ form_widget(choice) }}
                                {{ form_label(choice) }}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="champ">
                        {{ form_widget(registrationForm.nom, {'attr' : {'class' : 'input_login', 'placeholder' : ''} }) }}
                        <label for="nom" class="input_label">Nom</label>
                    </div>
                    <div class="champ">
                        {{ form_widget(registrationForm.prenom, {'attr' : {'class' : 'input_login', 'placeholder' : ''} }) }}
                        <label for="prenom" class="input_label">Pr√©nom</label>
                    </div>
                    <div class="champ">
                        {{ form_widget(registrationForm.password.first, {'attr' : {'class' : 'input_login', 'placeholder' : ''} }) }}
                        <label for="password1" class="input_label">Mot de passe</label>
                    </div>
                    <div class="champ">
                        {{ form_widget(registrationForm.password.second, {'attr' : {'class' : 'input_login', 'placeholder' : ''} }) }}
                        <label for="password2" class="input_label">Confirmer mot de passe</label>
                    </div>
                    <input type="submit" class="envoyer" id="envoyer" value="S'inscrire">                    
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </main>

{% endblock %}

{% block footer %} {% endblock %}
