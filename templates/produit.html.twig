{% extends 'base.html.twig' %}

{% block stylesheets %} 
<link rel="stylesheet" href={{asset('styles/produit.css')}} type="text/css">
{% endblock %}


{% block content %}
    <main>
        <div class="principale">
        <div class="container">
            <img class="produit-images" src= "{{ asset('images/' ~ produit.image) }}" alt= "{{produit.image}}">
            <div class="produit-options">
                    {{ form_errors(addproduitForm) }}
                    {{ form_start(addproduitForm, {'attr' : {'class' : 'form-options'} }) }}
                    <div class="informations">
                        <a href=""  class="marque-vetement">{{produit.marque}}</a>
                        <p class="type-vetement">{{produit.nom}}</p>
                        <p class="prix-vetement">{{produit.prix}} â‚¬</p>
                    </div>
                    <div class="taille-option">
                        <label for="taille">Taille</label>
                        <div class="option-select">
                            {{ form_widget(addproduitForm.taille, {'attr' : {'name' : 'taille', 'id' : 'taille'}} ) }}
                        </div>
                    </div>
                    <div class="couleur-option">
                        <label for="couleur">Couleur</label>
                        <div class="option-select">
                            {{ form_widget(addproduitForm.couleur, {'attr' : {'name' : 'couleur', 'id' : 'couleur'}} ) }}
                        </div>
                    </div>
                    {{ form_widget(addproduitForm.submit, {'attr' : {'class' : 'ajouter'} }) }}
                {{ form_end(addproduitForm) }}
            </div>
        </div>
        </div>
    </main>
{% endblock %}
